<!DOCTYPE html>
<html>
    <head>
        @using ContactsControl.Enums;
        @model UserModel
        @{
            ViewData["Title"] = "Editar usuário";
        }
    </head>
    <body>
        <div class="text-center">
            <h1 class="display-4">Editar Usuário</h1>
        </div>

        <form asp-controller="User" asp-action="Update" method="post">

            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label for="name">Nome</label> @Html.ValidationMessageFor(x => x.Name)
                <input type="text" asp-for="Name" class="form-control" placeholder="Informe o nome">
            </div>
            <div class="form-group mb-3">
                <label for="login">Login</label> @Html.ValidationMessageFor(x => x.Login)
                <input type="text" asp-for="Login" class="form-control" placeholder="Informe o login">
            </div>
            <div class="form-group mb-3">
                <label for="typeuser">Tipo de usuário</label> @Html.ValidationMessageFor(x => x.TypeUser)
                <select asp-for="TypeUser" class="form-control">
                    <option value="">Selecione</option>
                    <option value="@TypeUser.Admin">Administrador</option>
                    <option value="@TypeUser.Default">Padrão</option>
                </select>
            </div>
            <div class="form-group mb-3">
                <label for="email">E-mail</label> @Html.ValidationMessageFor(x => x.Email)
                <input type="email" asp-for="Email" class="form-control" placeholder="Informe o e-mail">
            </div>


            <button type="submit" class="btn btn-primary d-block w-100 mb-3">Alterar</button>
            <a class="btn btn-danger d-block w-100 mb-3" role="button" asp-controller="User" asp-action="Index">Cancelar</a>
        </form>
    </body>
</html>